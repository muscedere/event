{{ form_start(form) }}
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.firstname) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.lastname) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.age) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.phone) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.city) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.zipCode) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.email) }}
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        {{ form_row(form.description) }}
    </div>
</div>
<button class="btn btn-warning">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
